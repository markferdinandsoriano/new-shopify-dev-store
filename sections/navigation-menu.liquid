{% schema %}
{
  "name": "navigation-menu",
  "class": "navigation-menu-section",
  "blocks": [
    {
      "type": "heading",
      "name": "Custom menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "parent_link",
          "label": "Root Level Link"
        },
        {
          "type": "select",
          "id": "menu_level",
          "label": "Select Link Level",
          "options": [
            {
              "value": "root-level",
              "label": "Root level"
            },
            {
              "value": "level-1",
              "label": "Level 1"
            },
            {
              "value": "level-2",
              "label": "Level 2"
            }
          ]
        },
        {
          "type": "link_list",
          "id": "custom_menu",
          "label": "Special Categories menu"
        }
      ]
    }
  ]
}
{% endschema %}
