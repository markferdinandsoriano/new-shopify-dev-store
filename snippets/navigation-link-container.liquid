{% capture large_screen_link_conditions %}
  {% if btn_level == ".root-level-link-btn" %}
   {% for root_link in menu_link_lists %} 
    {%  render 'navigation-link-buttons',has_links:root_link.links ,link_title_value: root_link.title, root_title: root_link.title, btn_level: btn_level %}
    {% endfor %}
 {% endif %} 

{% if btn_level == ".level-1-link-btn" %}
    {% for root_link in menu_link_lists %} 
        {% for level_1_link in root_link.links %}
            {%  render 'navigation-link-buttons',has_links:level_1_link.links, link_title_value: level_1_link.title, root_title: root_link.title ,btn_level: btn_level %}
        {% endfor %}
    {% endfor %}
  {% endif %}  

  {% if btn_level == ".level-2-link-btn" %}
    {% for root_link in menu_link_lists %} 
        {% for level_1_link in root_link.links %}
            {% for level_2_link in level_1_link.links %}
                {%  render 'navigation-link-buttons',has_links:level_2_link.links, link_title_value: level_2_link.title, root_title: level_1_link.title, btn_level: btn_level %}
            {% endfor %}
        {% endfor %}
    {% endfor %}
  {% endif %} 
{% endcapture %}

{% capture mobile_screen_link_conditions %}
{% for root_link in menu_link_lists %}
  {%  render 'navigation-link-buttons',has_links:root_link.links, link_title_value: root_link.title, root_title: root_link.title ,btn_level: '.root-level-link-btn' %}
  {% for level_1_link in root_link.links %}
    {%  render 'navigation-link-buttons',has_links:level_1_link.links, link_title_value: level_1_link.title, root_title: root_link.title ,btn_level: '.level-1-link-btn' %}
    {% for level_2_link in level_1_link.links %}
      {%  render 'navigation-link-buttons',has_links:level_2_link.links, link_title_value: level_2_link.title, root_title: level_1_link.title ,btn_level: '.level-2-link-btn' %}
    {% endfor %}
  {% endfor %}
{% endfor %}
{% endcapture %}

<ul main-menu class="text-[#373737] text-xl text-center p-2 flex flex-col gap-y-2 w-full h-auto">
  {% if screen == 'large_screen' %}
    {{ link_headers }}
    {{ large_screen_link_conditions }}
  {% endif %}

  {% if screen == 'mobile_screen' %}
    {{ mobile_screen_link_conditions }}
  {% endif %}
</ul>
