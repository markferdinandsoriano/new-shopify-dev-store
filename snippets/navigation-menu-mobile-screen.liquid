{% capture mobile_screen_accounts_menu %}
<div class="account-menu">
  <hr>
  <ul class="text-[#373737] text-xl text-center bg-[#F3F4F5] flex flex-col p-2 gap-y-2 w-full h-auto">
  <button
    class="w-full flex flex-row items-center justify-between p-[8px] h-[44px] hover-btn"
  >
    <span class="text-[18px] pointer-events-none parent-link-title"> Account </span>
  </button>
  <button
    class="w-full flex flex-row items-center justify-between p-[8px] h-[44px] hover-btn"
  >
    <span class="text-[18px] pointer-events-none parent-link-title"> NewsLetter </span>
  </button>
  <button
    class="w-full flex flex-row items-center justify-between p-[8px] h-[44px] hover-btn"
  >
    <span class="text-[18px] pointer-events-none parent-link-title"> Stores </span>
  </button>
  <button
    class="w-full flex flex-row items-center justify-between p-[8px] h-[44px] hover-btn"
  >
    <span class="text-[18px] pointer-events-none parent-link-title"> Contact us </span>
  </button>
</ul>
</div>
{% endcapture %}

<navigation-menu-main
  data-main-container-selector="#menu-container"
  data-nav-icon-selector="#nav-icon"
  data-root-link-btn-selector=".root-level-link-btn"
  data-root-link-container-selector="root-level-link-container"
  data-custom-image-conatiner-selector=".custom-images"
  data-link-container-selector=".link-container"
  data-hamburger-icon-selector=".hamburger-icon"
  data-mobile-menu-default-title="HARVEY NORMAN"
  data-exit-icon-selector=".mobile-exit-icon"
  data-mobile-back-btn-selector="#back-menu-btn"
  data-menu-main-title-selector=".title-header"
  data-screen-type="mobile_screen"
  class="block sm:hidden"
>
  <div class="flex flex-row items-center fixed top-2 left-2 w-[124px]">
    <div class="py-2 px-3">
      <button id="nav-icon" class="flex items-center justify-center text-black w-[1.5rem] h-[1.5rem]">
        <span class="hamburger-icon">
          {% render 'icon-hamburger' %}
        </span>
      </button>
    </div>
  </div>
  <div id="menu-container" class="hidden fixed top-0 left-0 w-full grid-cols-4 h-screen">
    <div class="col-span-3 bg-white h-fit">
      <div class="display-grid grid-cols-4 w-full py-1 px-1.5 justify-center items-center h-[5vh]">
        <div
          class="hidden justify-center col-span-1 w-full text-center text-black"
        >
          <button
            id="back-menu-btn"
            class="w-[1.5rem] h-[1.5rem]"
            data-btn-level
            data-title
          >
            {% render 'chevron-left' %}
          </button>
        </div>
        <div class="text-left col-span-3 w-full">
          <h1 class="text-black text-4xl title-header">HARVEY NORMAN</h1>
        </div>
        <div class="display-grid justify-center col-span-1 w-full text-black">
          <button class="mobile-exit-icon block w-[1.5rem] h-[1.5rem]">
            {% render 'exit-icon' %}
          </button>
        </div>
      </div>
      <navigation-mobile-screen-component
        data-mobile-back-btn-selector="#back-menu-btn"
        data-exit-icon-selector=".mobile-exit-icon"
        data-parent-container-selector="#menu-container"
        data-menu-main-title-selector=".title-header"
        data-custom-menu-attribute=".custom-menu-container"
        data-account-menu-container-selector=".account-menu"
        data-custom-image-selector=".custom-images"
        data-link-container-selector="link-container"
        data-link-headers-selector=".link-headers"
        data-links-secondary-selector=".link-secondary-title"
        data-root-link-btn-selector=".root-level-link-btn"
        data-level1-link-btn-selector=".level-1-link-btn"
        data-level2-link-btn-selector=".level-2-link-btn"
        class="link-container flex-col overflow-y-auto h-[95vh]"
      >
        {% render 'navigation-link-container', menu_link_lists: menu_link_lists, screen: 'mobile_screen' %}
        {{ custom_menu_categories }}
        {{ mobile_screen_accounts_menu }}
        <div class="custom-images hidden ">
          <hr>
          <ul class="custom-images flex flex-col p-2 gap-y-6 bg-white">
            {{ custom_images }}
          </ul>
        </div>
      </navigation-mobile-screen-component>
    </div>
  </div>
</navigation-menu-main>

<script
  type="module"
  defer="defer"
  src="{{ 'navigation-menu-main.js' | asset_url }}"
></script>

<script
  type="module"
  defer="defer"
  src="{{ 'navigation-mobile-screen-component.js' | asset_url }}"
></script>
